<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="#F5F4EB">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="171dp"
        android:layout_height="165dp"
        android:src="@drawable/logo"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="159dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLAFLA"
        android:textColor="#99735E"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="355dp" />

    <EditText
        android:id="@+id/textView2"
        android:layout_width="373dp"
        android:layout_height="39dp"
        android:hint="Enter your ID or email address"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="496dp" />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="372dp"
        android:layout_height="38dp"
        android:hint="Password"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="544dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:background="F5F4EB"
        android:text="log in"
        android:textColor="@color/black"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="582dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="127dp"
        android:layout_height="33dp"
        android:background="F5F4EB"
        android:text="Enter as a guest"
        android:textColor="@color/black"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="582dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:background="F5F4EB"
        android:text="Create an account"
        android:textColor="@color/black"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="650dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="125dp"
        android:layout_height="37dp"
        android:background="F5F4EB"
        android:text="Find Password"
        android:textColor="@color/black"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="650dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:background="F5F4EB"
        android:text="Find ID"
        android:textColor="@color/black"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="650dp" />

</androidx.constraintlayout.widget.ConstraintLayout>